    private void agregarEventos() {
        
        txCALCULAR.addActionListener(new ActionListener() {
            
            public void actionPerformed(ActionEvent e) {
                calcularPeso();
            }
        });

        txNUEVO.addActionListener(new ActionListener() {
            
            public void actionPerformed(ActionEvent e) {
                limpiar();
            }
        });
    }
    private void calcularPeso() {
        String nom = txNOMBRE.getText().trim();
        double peso = Double.parseDouble(txPESO1.getText().trim());
        double estatura = Double.parseDouble(txALTURA1.getText().trim());
        if (peso <= 0 || estatura <= 0) {
                JOptionPane.showMessageDialog(this, 
                    "El peso y la altura deben ser valores positivos", 
                    "Valores inválidos", 
                    JOptionPane.ERROR_MESSAGE);
                return;
            }
        double imc = peso / (Math.pow(estatura, 2));
        String categoria = "";
            if (imc < 18.5) {
                categoria = "Bajo de Peso, come un poco más";
            } else if (imc < 25) {
                categoria = "Peso Normal, mantente igual";
            } else if (imc < 30) {
                categoria = "Sobrepeso, No comas mucho arroz";
            } else if (imc < 35) {
                categoria = "Obesidad I, No comas doble porción y haz ejercicio";
            } else {
                categoria = "Obesidad II o Mórbida, come sólo vegetales y carne en porciones pequeñas, haz ejercicio";
            }
        String resultado = String.format("IMC: %.2f - %s", imc, categoria);
            txRESULTADO.setText(resultado);
    }
     private void limpiar() {
        txNOMBRE.setText("");
        txALTURA.setText("");
        txPESO.setText("");
        txRESULTADO.setText("");
    }
